
<h1><%= @article.title %></h1>

<p><%= @article.body %></p>
<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Delete", article_url(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
  <li><%= link_to "Home", articles_url(@article) %></li>
 
  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
</ul>

<h2>Comments</h2>
<%= render  @article.comments %>  

<h2>Add a comment:</h2>
<%= render 'comments/form' %>